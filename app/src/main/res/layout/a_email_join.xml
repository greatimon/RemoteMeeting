<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/back_2"
        android:scaleType="centerCrop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="13dp"
                android:src="@drawable/left_bracket"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:gravity="center|start"
                android:text="이메일로 가입하기"
                android:textColor="#fbfbfb"
                android:textSize="22dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textCursorDrawable="@drawable/shape_cursor_color"
            android:hint="이메일을 입력해주세요"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="#fbfbfb"
            android:textColorHint="#b9b9b9"
            android:textSize="15dp" />

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:text="이미 사용중인 이메일입니다"
            android:gravity="end"
            android:textSize="15dp"
            android:textColor="#ec4141"/>

        <EditText
            android:id="@+id/input_pw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textCursorDrawable="@drawable/shape_cursor_color"
            android:paddingLeft="10dp"
            android:hint="비밀번호, 8~16자리수 (영문,숫자,특수문자)"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:textColor="#fbfbfb"
            android:textColorHint="#b9b9b9"/>

        <EditText
            android:id="@+id/input_pw2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textCursorDrawable="@drawable/shape_cursor_color"
            android:paddingLeft="10dp"
            android:hint="비밀번호를 한번 더 입력해주세요"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:textColor="#fbfbfb"
            android:textColorHint="#b9b9b9"/>

        <EditText
            android:id="@+id/input_nickName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textCursorDrawable="@drawable/shape_cursor_color"
            android:paddingLeft="10dp"
            android:hint="닉네임, 2~15자리수"
            android:inputType="text"
            android:textSize="15dp"
            android:textColor="#fbfbfb"
            android:textColorHint="#b9b9b9"/>

        <TextView
            android:id="@+id/join_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_normal_btn_rounded"
            android:gravity="center"
            android:text="가입하기"
            android:textSize="16dp"
            android:textColor="#fbfbfb"
            android:textStyle="bold"/>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="- 이메일 인증안내 -"
            android:textSize="15dp"
            android:textColor="#fbfbfb"/>

        <TextView
            tools:visibility="gone"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="자주 사용하는 이메일로 가입해주세요.\n추후 비밀번호 찾기에 이용됩니다."
            android:lineSpacingMultiplier="1.2"
            android:textSize="15dp"
            android:textColor="#fbfbfb"/>

    </LinearLayout>
</RelativeLayout>