<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--날짜 변경선-->
    <LinearLayout
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/date_line_LIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:id="@+id/date_line_divider_V_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9dcdd"
            />
        <TextView
            android:id="@+id/date_line_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="#e8eeee"
            tools:text="2018년 1월 21일 (일)"
            android:textColor="#4e4e4e"
            android:textSize="15dp"
            tools:ignore="SpUsage" />
        <View
            android:id="@+id/date_line_divider_V_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9dcdd"
            />
    </LinearLayout>

    <!--회의 결과 item-->
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/container_LIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <!--회의 상대 프로필 사진-->
        <ImageView
            android:id="@+id/profile_imgV"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/back_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/meeting_title_txt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.15"
                    tools:ignore="NestedWeights,SpUsage"
                    tools:text="법무법인 '다이겨', 홈피제작  첫번째 회의"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:textSize="15dp"
                    android:textColor="#434343"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.85"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:id="@+id/meeting_subject_user_nickName_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="5dp"
                        android:gravity="center|start"
                        tools:text="그레아티"
                        android:textColor="#2b2b2b"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:ignore="HardcodedText,SpUsage"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        android:layout_marginEnd="1dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/timer"
                        />
                    <TextView
                        android:id="@+id/total_meeting_time_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        tools:text="01:07:52"
                        android:textColor="#2b2b2b"
                        android:textSize="12dp"
                        tools:ignore="HardcodedText,SpUsage" />
                </LinearLayout>
            </LinearLayout>

            <!--세로 구분선-->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#d9dcdd"
                android:layout_marginEnd="6dp"
                />

            <LinearLayout
                android:visibility="visible"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/memo_imgV"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/memo"
                        tools:alpha="0.3"
                        />
                    <ImageView
                        android:id="@+id/image_to_document_imgV"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/image_to_document"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/upload_images_imgV"
                        android:layout_width="20dp"
                        android:layout_height="19dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/upload_images"
                        />
                    <ImageView
                        android:id="@+id/drawing_images_imgV"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:paddingStart="1dp"
                        android:src="@drawable/drawing_images_1"
                        tools:alpha="0.3"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>