<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.jyn.remotemeeting">

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"
        />

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:name=".Util.Myapp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="InnerclassSeparator">

        // 메인 로그인 전
        <activity
            android:name=".Activity.Main_before_login_A"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:scheme="https"
                    android:host="appr.tc"
                    />
                <data
                    android:scheme="http"
                    android:host="appr.tc"
                    />
            </intent-filter>
        </activity>

        // 회원가입
        <activity
            android:name=".Activity.Email_join_A"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="InnerclassSeparator">
        </activity>

        // 메인_로그인 후
        <activity
            android:name=".Activity.Main_after_login_A"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="InnerclassSeparator">
        </activity>

        // 파트너 검색
        <activity
            android:name=".Activity.Search_partner"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="InnerclassSeparator">
        </activity>

        // 프로필 자세히 보기
        <activity
            android:name=".Dialog.Profile_detail_D"
            android:screenOrientation="portrait"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        // 파트너 끊기 확인
        <activity
            android:name=".Dialog.Confirm_subtract_partner_D"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="portrait"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        // 이미지 선택 방법 선택하기
        <activity
            android:name=".Dialog.Choose_method_for_select_img_D"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="portrait"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        // 이미지 미리보기
        <activity
            android:name=".Activity.Preview_img_A"
            android:screenOrientation="portrait"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        // 회의룸 생성
        <activity
            android:name=".Dialog.Create_room_D"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="portrait"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        // 회의룸 입장
        <activity
            android:name=".Dialog.Enter_room_D"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="portrait"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        // 파일 업로드 컨펌받기
        <activity
            android:name=".Dialog.Confirm_upload_files_D"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="landscape"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        // 회의 대상 등록
        <activity
            android:name=".Dialog.Add_subject_user_D"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="portrait"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        // WebRTC
        <activity
            android:name=".Activity.Call_A"
            android:screenOrientation="landscape"
            android:exported="false">
        </activity>

        // 회의 종료
        <activity
            android:name=".Dialog.Out_confirm_D"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="landscape"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        // 파일 등록
        <activity
            android:name=".Dialog.Register_file_to_project_D"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="landscape"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
    </application>

</manifest>